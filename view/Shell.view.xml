<mvc:View
	controllerName="rshub.ui.view.Shell"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
	height="100%">
	
    <Toolbar class="stickyToolbar" design="Solid">
            <content>
<!--
            <Button id="idnavbutton"
                        icon="sap-icon://menu2"
                        type="Transparent"
                        press=".handleMenuPress"/>
-->
                <MenuButton icon="sap-icon://menu2"
                            text="Menu">
                    
                    <Menu	itemSelected=".onMenuItemSelect"
                            items="{path: '/navMenu'}">

                        <MenuItem text="{text}"
                                    icon="{icon}"
                                    key="{key}"
                                    startsSection="{newSection}"
                                    visible="{enabled}"
                                    items="{items}">

                            <items>
                                <MenuItem text="{text}"
                                            icon="{icon}"
                                            key="{key}"
                                            startsSection="{newSection}"
                                            visible="{enabled}"/>
                            </items>
                        </MenuItem>
                    </Menu>
                </MenuButton>
                
                <ToolbarSpacer />
                
                <Image src="./media/logo/logo_ui5.png" 
                       height="70%"/>
                <Title text="Kassa Solutions"/>
                
                <ToolbarSpacer/>

                <Button text="Alan Smith" 
                        type="Transparent" 
                        press=".handleNamePress"/>
            </content>
    </Toolbar>
    
    <App id="app"/>
    
</mvc:View>